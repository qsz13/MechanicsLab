                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Viewbox  Grid.Row="0">
                            <TextBlock Foreground="White" Text="扭转实验室" Margin="0,5,0,0"/>
                        </Viewbox>
                        <Viewbox  Grid.Row="1">
                            <TextBlock Foreground="#FFFF6701" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"><Run Text="时段 2- 正在进行"/></TextBlock>
                        </Viewbox>
                        <Viewbox  Grid.Row="2">
                            <TextBlock Foreground="#FFFF6701" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"><Run Text="实验内容"/></TextBlock>
                        </Viewbox>
                        <Viewbox  Grid.Row="3">
                            <TextBlock Foreground="#FFFF6701"><Run Text="1100201 材料力学 姜建华"/></TextBlock>
                        </Viewbox>
                        <Viewbox  Grid.Row="4">
                            <TextBlock Foreground="#FFFFD189"><Run Text="赵红晓／俞永辉／聂国俊／刘五祥／朱金龙"/></TextBlock>
