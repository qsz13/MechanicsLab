         Title="MainWindow" WindowState="Maximized" WindowStyle="None" >
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/background.png"/>
    </Window.Background>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                    
                </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0">
                        <Label Foreground="#FFFFD189" Content="同济大学力学试验中心欢迎您" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Microsoft MHei"></Label>
                        
                    </Viewbox>
                <Viewbox Grid.Row="1">
                        <Label Content="Welcom to Mechanics Lab Center of Tongji University" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>

                    </Viewbox>
               
            </Grid>
            


        <MediaElement Name="MediaPlayer" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Source="media.mp4" UnloadedBehavior="Play" ></MediaElement>
    </Grid>

        <Grid  Grid.Column="1">
            <Grid ScrollViewer.CanContentScroll="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6.18*" />
                    <RowDefinition Height="3.82*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#FF256B94" Margin="10,10,10,5">


